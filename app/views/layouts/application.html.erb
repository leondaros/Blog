<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <%= nav_bar brand: "Home", brand_link: posts_path do%>
        <%=form_tag posts_path,method: :get, class:"navbar-form navbar-right" do%>
          <div class="form-group">
            <%= text_field_tag :tag,@search,class:"form-control"%>
            <%= button_to "Search",nil,class:"btn btn-default"%>
          </div>
        <%end%>
      <%end%>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
