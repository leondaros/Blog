<p id="notice"><%= notice %></p>

<h1>Posts</h1>
    <% @posts.each do |post| %>
        <div class="row">
          <p><%= post.title %></p>
          <p><%= post.description %></p>
          <p><%= post.tag %></p>
          <p>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </div>
    <% end %>
<br>
<%= link_to 'New Post', new_post_path %>
